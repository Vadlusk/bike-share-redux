        <% @conditions.build_trips_hash(@precipitation_ranges, :min_trips_by, :precipitation_inches).each do |key, value| %>
          <h3><%= key %>: <%= value %></h3>
        <% end %>
      </div>
      <div class="dashboard-info average_rides_by_precipitation">
        <h1>Average Number of Rides by Precipitation</h1>
        <% @conditions.build_avg_trips_hash(@precipitation_ranges, :trip_count_by, :precipitation_inches).each do |key, value| %>
          <h3><%= key %>: <%= value %></h3>
        <% end %>
      </div>
    </div>

    <div class="dashboard-section">
      <div class="dashboard-info highest_rides_by_wind_speed">
        <h1>Highest Number of Rides by Wind Speed</h1>
        <% @conditions.build_trips_hash(@wind_ranges, :max_trips_by, :mean_wind_speed_mph).each do |key, value| %>
