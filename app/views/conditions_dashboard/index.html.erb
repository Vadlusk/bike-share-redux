          <h3><%= key %>: <%= value %></h3>
        <% end %>
      </div>
      <div class="dashboard-info average_rides_by_wind_speed">
        <h1>Average Number of Rides by Wind Speed</h1>
        <% @conditions.build_avg_trips_hash(@wind_ranges, :trip_count_by, :mean_wind_speed_mph).each do |key, value| %>
          <h3><%= key %>: <%= value %></h3>
        <% end %>
      </div>
    </div>

    <div class="dashboard-section">
      <div class="dashboard-info highest_rides_by_visibility">
        <h1>Highest Number of Rides by Visibility</h1>
        <% @conditions.build_trips_hash(@visibility_ranges, :max_trips_by, :mean_visibility_miles).each do |key, value| %>
