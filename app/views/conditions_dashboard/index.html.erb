<header>
  <div class="header-title">
    <h6>
      Conditions Dashboard
    <h6>
  </div>
</header>

<main>
    <div class="card-container">
      <div class="dashboard-section">
        <div class="dashboard-info highest_rides_by_temperature">
          <h1>Highest Number of Rides by Temperature</h1>
          <% @conditions.build_trips_hash(@temp_ranges, :max_trips_by, :max_temperature_f).each do |key, value| %>
            <h3><%= key %>: <%= value %></h3>
          <% end %>
        </div>
        <div class="dashboard-info lowest_rides_by_temperature">
          <h1>Lowest Number of Rides by Temperature</h1>
          <% @conditions.build_trips_hash(@temp_ranges, :min_trips_by, :max_temperature_f).each do |key, value| %>
            <h3><%= key %>: <%= value %></h3>
          <% end %>
        </div>
        <div class="dashboard-info average_rides_by_temperature">
          <h1>Average Number of Rides by Temperature</h1>
          <% @conditions.build_avg_trips_hash(@temp_ranges, :trip_count_by, :max_temperature_f).each do |key, value| %>
            <h3><%= key %>: <%= value %></h3>
          <% end %>
        </div>
      </div>

    <div class="dashboard-section">
      <div class="dashboard-info highest_rides_by_precipitation">
        <h1>Highest Number of Rides by Precipitation</h1>
        <% @conditions.build_trips_hash(@precipitation_ranges, :max_trips_by, :precipitation_inches).each do |key, value| %>
          <h3><%= key %>: <%= value %></h3>
        <% end %>
      </div>
      <div class="dashboard-info lowest_rides_by_precipitation">
