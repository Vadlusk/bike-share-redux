<table class="table table-striped table-hover">
    <tr>
      <th>Name</th>
      <th>Dock Count</th>
      <th>City</th>
      <th>Installation Date</th>
      <% if current_admin? %>
      <th></th>
      <% end %>
  </tr>
  <% @stations.each do |s| %>
    <tr class="station-<%= s.id %>">
      <td><a href="/stations/<%= s.slug %>"><%= s.name %></a></td>
      <td><%= s.dock_count %></td>
      <td><%= s.city %></td>
      <td><%= format_date(s.installation_date) %></td>
      <% if current_admin? %>
        <td>
          <div class="table-buttons">
            <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_admin_station_path(s) %>
            <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, admin_station_path(s), method: :delete, data: { confirm: "Are you sure? You will permanently delete this station."} %>
          </div>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
