<div class="card-container">
  <div class="card-info">
    <h1><%= @accessory.title %></h1>
    <img src="<%= @accessory.image_url %>" alt="<%= @accessory.title %>" class="accessory_image">
    <%= @accessory.description %> -
    <%= number_to_currency(@accessory.price) %>
    <% if @active %>
      <%= button_to 'Add to Cart', carts_path(accessory_id: @accessory.id) %>
    <% else %>
      Accessory Retired
    <% end %>
  </div>
</div>
