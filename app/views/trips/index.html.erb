<header>
  <div class="header-title">
    <h6>
      Trips Index
    <h6>
  </div>
</header>
<main>
  <table class="table table-striped table-hover">
    <tr>
      <th>Trip ID</th>
      <th>Duration</th>
      <th>Start Date</th>
      <th>Start Station Name</th>
      <th>Start Station ID</th>
      <th>Trip End Date</th>
      <th>End Station Name</th>
      <th>End Station ID</th>
      <th>Bike ID</th>
      <th>Subscription Type</th>
      <th>Zip Code</th>
      <% if current_admin? %>
        <th></th>
      <% end %>
    </tr>
    <% @trips.each do |trip| %>
      <tr class="trip-<%= trip.id %>">
        <td><%= link_to trip.id, trip_path(trip) %></td>
        <td><%= trip.duration %></td>
        <td><%= format_date(trip.start_date) %></td>
        <td><%= trip.start_station_name %></td>
        <td><%= trip.start_station_id %></td>
        <td><%= format_date(trip.end_date) %></td>
        <td><%= trip.end_station_name %></td>
        <td><%= trip.end_station_id %></td>
        <td><%= trip.bike_id %></td>
        <td><%= trip.subscription_type %></td>
        <td><%= trip.zip_code %></td>
        <% if current_admin? %>
          <td>
            <div class="table-buttons">
              <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_admin_trip_path(trip) %>
              <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, method: :delete, data: { confirm: "Are you sure? You will permanently delete this trip."} %>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>
</main>
<%= will_paginate @trips %>
