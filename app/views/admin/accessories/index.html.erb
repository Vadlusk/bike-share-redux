<table class="table table-striped table-hover">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Status</th>
      <th>Description</th>
      <th></th>
  </tr>
  <% @accessories.each do |a| %>
    <tr class="accessory-<%= a.id %>">
      <td><a href="/accessories/<%= a.id %>"><img src="<%= a.image_url%>" alt=""></a></td>
      <td><a href="/accessories/<%= a.id %>"><%= a.title %></a></td>
      <td><%= a.status %></td>
      <td><%= a.description %></td>
    </tr>
  <% end %>
</table>
