<table class="table table-striped table-hover">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Status</th>
      <th>Description</th>
      <th></th>
      <th></th>
  </tr>
  <% @accessories.each do |accessory| %>
    <tr class="accessory-<%= accessory.id %>">
      <td><a href="/accessories/<%= accessory.id %>"><img src="<%= accessory.image_url%>" alt=""></a></td>
      <td><a href="/accessories/<%= accessory.id %>"><%= accessory.title %></a></td>
      <td><%= accessory.status %></td>
      <td><%= accessory.description %></td>
      <td>
        <% if accessory.active? %>
          <%= button_to 'Retire', admin_status_path(id: accessory.id, status: 1), data: { confirm: "Are you sure you want to retire this item?"} %>
        <% else %>
          <%= button_to 'Activate', admin_status_path(id: accessory.id, status: 0), data: { confirm: "Are you sure you want to activate this item?"} %>
        <% end %>
      </td>
      <td>
        <div class="table-buttons">
          <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_admin_accessory_path(accessory) %>
        </div>
      </td>
    </tr>
  <% end %>
</table>
