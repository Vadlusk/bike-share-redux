<header>
  <div class="header-title">
    <h6>
      Admin Dashboard
    <h6>
  </div>
</header>

<main>
  <div class="card-container">
    <div class="card-info">
      <h1><%= @user.username %></h1>
      <!-- <h3>Bikes: </h3><p><%= @user.username %></p> -->
      <h3>email: </h3><p><%= @user.email %></p>
    </div>
  </div>
  <div>
    <p>
      <%= link_to 'Paid', '/admin/dashboard?status=paid' %>:
      <%= @orders.status_total('paid') %>
    </p>
    <p>
      <%= link_to 'Ordered', '/admin/dashboard?status=ordered' %>:
      <%= @orders.status_total('ordered') %>
    </p>
    <p>
      <%= link_to 'Cancelled', '/admin/dashboard?status=cancelled' %>:
      <%= @orders.status_total('cancelled') %>
    </p>
    <p>
      <%= link_to 'Completed', '/admin/dashboard?status=completed' %>:
      <%= @orders.status_total('completed') %>
    </p>
  </div>
  <table class="table table-striped table-hover">
    <tr>
      <th>Order Number</th>
      <th>Username</th>
      <th>Purchase Date</th>
      <th>Status</th>
      <th></th>
      <th></th>
    </tr>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, order_path(order) %></td>
        <td><%= order.user.username %></td>
        <td><%= order.created_at %></td>
        <td><%= order.status %></td>
        <td>
          <% if order.status.include?("ordered") || order.status.include?("paid") %>
            <%= form_for order do |f| %>
              <%= f.hidden_field :status %>
              <%= hidden_field_tag :status, "cancelled" %>
              <%= f.submit "Cancel" %>
            <% end %>
          <% end %>
        </td>
        <td>
          <% if order.status == "ordered" %>
            <%= form_for order do |f| %>
              <%= f.hidden_field :status %>
              <%= hidden_field_tag :status, "paid" %>
              <%= f.submit "Mark as Paid" %>
            <% end %>
          <% end %>
          <% if order.status == "paid" %>
            <%= form_for order do |f| %>
              <%= f.hidden_field :status %>
              <%= hidden_field_tag :status, "completed" %>
              <%= f.submit "Mark as Completed" %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</main>
