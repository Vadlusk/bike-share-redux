<%= form_for [ :admin, @trip ] do |f| %>
  <%= f.label :duration %>
  <%= f.number_field :duration %>

  <%= f.label :start_date %>
  <%= f.date_field :start_date %>

  <%= f.label :start_station_name %>
  <%= f.text_field :start_station_name %>

  <%= f.label :start_station_id, 'Start station ID' %>
  <%= f.number_field :start_station_id %>

  <%= f.label :end_date %>
  <%= f.date_field :end_date %>

  <%= f.label :end_station_name %>
  <%= f.text_field :end_station_name %>

  <%= f.label :end_station_id, 'End station ID' %>
  <%= f.number_field :end_station_id %>

  <%= f.label :bike_id, 'Bike ID' %>
  <%= f.number_field :bike_id %>

  <%= f.label :subscription_type %>
  <%= f.select :subscription_type, ['subscriber', 'customer'] %>

  <%= f.label :zip_code %>
  <%= f.number_field :zip_code %>

  <div class="cancel-submit">
    <%= link_to "Cancel", trips_path, class: 'btn btn-outline-light' %>
    <%= f.submit class: 'btn btn-outline-light'%>
  </div>
<% end %>
